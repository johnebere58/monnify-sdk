<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:background="@color/monnifySeeThroughBackground"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        app:cardElevation="@dimen/dimen8dp"
        app:cardCornerRadius="@dimen/dimen5dp"
        android:layout_width="@dimen/dimen60dp"
        android:layout_height="@dimen/dimen60dp">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateOnly="true"
            android:id="@+id/circularProgressIndicator"
            app:indicatorColor="@color/monnifyRoyalGold"
            app:indicatorDirectionCircular="clockwise"
            app:indicatorSize="@dimen/dimen28dp"
            app:trackCornerRadius="@dimen/dimen8dp"
            app:trackThickness="@dimen/dimen3dp" />

    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen12dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/progressTitleTextView"
        style="@style/Monnify.TextAppearance.Loading"
        android:layout_width="wrap_content"
        android:textColor="#4F4F4F"
        android:layout_height="wrap_content"
        tools:text="Loading"/>


</androidx.appcompat.widget.LinearLayoutCompat>