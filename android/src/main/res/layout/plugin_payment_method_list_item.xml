<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen8dp"
    android:background="@drawable/bg_payment_method"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/paymentMethodIconImageView"
        android:layout_width="@dimen/dimen36dp"
        android:layout_height="@dimen/dimen34dp"
        android:layout_marginVertical="@dimen/dimen12dp"
        android:layout_marginStart="@dimen/dimen12dp"
        android:adjustViewBounds="true"
        android:background="@drawable/bg_payment_method_icon"
        android:padding="@dimen/dimen8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dimen12dp" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/paymentMethodTitleTextView"
        style="@style/Monnify.TextAppearance.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen12dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@id/paymentMethodIconImageView"
        app:layout_constraintStart_toEndOf="@id/paymentMethodIconImageView"
        app:layout_constraintTop_toTopOf="@id/paymentMethodIconImageView"
        tools:text="Payment Method Name"
        android:layout_marginLeft="@dimen/dimen12dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/dimen8dp"
        android:layout_height="@dimen/dimen12dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dimen12dp"
        android:layout_marginEnd="@dimen/dimen12dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_chevron_right_orange" />

</androidx.constraintlayout.widget.ConstraintLayout>
